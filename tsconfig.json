{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "dist",

    "paths": {
      "@app-factory": ["app/factory"],
      "@entities/*": ["endpoints/entities/*"],
      "@sewn-configs": ["configs/sewn-configs"],
      "@custom-config": ["configs/custom-config"]
    },

    "strict": true,
    "allowJs": true,
    "sourceMap": false,
    "noImplicitAny": false,

    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2015", "es2016", "es2017", "es2018"]
  }
}